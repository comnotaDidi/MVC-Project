      border-radius: 40px;
      color: white;
      font-weight: 600;
      font-size: 1.1rem;
      box-shadow: 0 0 14px rgba(0, 206, 201, 0.4);
      transition: transform 0.2s ease;
      cursor: pointer;
    }

    .btn-add:hover {
      transform: scale(1.05);
    }

    .modal-content {
      background-color: #121218;
      color: white;
      border: 1px solid #2f2f38;
      border-radius: 12px;
    }

    .form-control {
      background-color: #1d1d25;
      color: white;
      border: 1px solid #444;
    }

    .subject-actions button,
    .subject-actions a {
      margin-left: 10px;
      color: #00cec9;
      font-size: 1.3rem;
      background: none;
      border: none;
      cursor: pointer;
      transition: color 0.3s ease;
    }

    .subject-actions button:hover,
    .subject-actions a:hover {
      color: #6c5ce7;
    }

    footer {
      margin-top: 60px;
      text-align: center;
      font-size: 0.9rem;
      color: #777;
    }

    /* Progress bar style */
    .progress {
      height: 6px;
      border-radius: 4px;
      background-color: #333;
      margin-top: 10px;
    }
    .progress-bar {
      background: linear-gradient(90deg, #6c5ce7, #00cec9);
    }
  </style>
</head>
<body>

