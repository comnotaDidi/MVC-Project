  </script>

  <!-- Toggle completed status -->
  <script>
    document.querySelectorAll('.toggle-completed').forEach(button => {
      button.addEventListener('click', async () => {
        const id = button.dataset.id;
        try {
          const response = await fetch(`/subjects/toggle/${id}`, { method: 'POST' });
          if (response.ok) {
            location.reload();
